<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:paddingLeft="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_set_goal_element_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <SeekBar
            android:id="@+id/seekBar_set_goal"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:splitTrack="false"
            android:progressDrawable="@drawable/seekbar_user_config_style"
            android:thumb="@drawable/seekbar_user_config_thumb"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_set_goal_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 minutter"
        android:textSize="14dp"
        android:textColor="@color/white"/>

</LinearLayout>