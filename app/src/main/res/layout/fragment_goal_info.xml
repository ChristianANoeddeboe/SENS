<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/fragment_see_through_grey"
    android:clickable="true"
    android:focusable="true"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/goalchart_cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/goalInfoBox_LinearLayout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/typeGoalInfo_LinearLayout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goalInfoBox_TextView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titel"
                    android:textColor="@color/TextColorFragmentHeader"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/typeGoalInfo_ImageButton_showless"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:contentDescription="Show Less"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_showless"
                    android:textSize="24dp" />
            </LinearLayout>


            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/goalInfoChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </com.github.mikephil.charting.charts.BarChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    style="@style/BlueButton"
                    android:id="@+id/goalInfo_Button_1week"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1 uge"
                    />

                <Button
                    style="@style/BlueButton"
                    android:id="@+id/goalInfo_Button_1month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1 måned"
                    />

                <Button
                    style="@style/BlueButton"
                    android:id="@+id/goalInfo_Button_3month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3 måned"
                    />

                <ImageButton
                    style="@style/BlueButton"
                    android:id="@+id/goalInfo_Button_editgoal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
