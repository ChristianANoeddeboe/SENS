<!-- fragment_screen_slide_page.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tv_user_config_name_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sens_edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Fornavn"
            android:textColor="@color/sensBlue"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/tv_user_config_name_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sens_edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Efternavn"
            android:textColor="@color/sensBlue"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/tv_user_config_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sens_edit_text"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="FÃ¸dselsdag"
            android:textColor="@color/sensBlue"
            android:layout_margin="8dp" />

    </LinearLayout>
</ScrollView>