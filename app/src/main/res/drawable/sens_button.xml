<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="9dip" />
            <gradient android:angle="-90" android:endColor="@color/sensBlueDarker" android:startColor="@color/sensBlueDarker" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="9dip" />
            <gradient android:angle="-90" android:endColor="@color/sensBlue" android:startColor="@color/sensBlue" />
        </shape>
    </item>
</selector>