<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exerciselogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/award" />

        <TextView
            android:id="@+id/exerciselogotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000/000" />

        <ImageView
            android:id="@+id/standinglogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/award" />

        <TextView
            android:id="@+id/standinglogotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000/000" />

        <ImageView
            android:id="@+id/walkinglogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/award" />

        <TextView
            android:id="@+id/walkinglogotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000/000" />
    </LinearLayout>

    <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dynamicArcView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cyclinglogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/award" />

        <TextView
            android:id="@+id/cyclinglogotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000/000" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/award" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000/000" />
    </LinearLayout>
</LinearLayout>